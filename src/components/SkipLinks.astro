---
const currentPath = Astro.url.pathname;
---

<div class="skip-links striped-background">
  <ul role="list" aria-label="Skip-links">
    <li><a class="visually-hidden preserve-background" href=`${currentPath}#main`>Skip to main content</a></li>
    <li><a class="visually-hidden preserve-background" href=`${currentPath}#footer`>Skip to footer</a></li>
  </ul>
</div>

<style lang="scss">
  .skip-links {
    position: absolute;
    inset-inline: 0;
    z-index: 1; /* Prevent header links from being hoverable when skip-links are visible */
    text-align: center;
    padding-inline: 1rem;
    align-content: center;
    height: inherit;
    border-bottom: 1px solid var(--foreground);
    transform: translateY(-100%);

    @media (prefers-reduced-motion: no-preference) {
      transition:
        transform 0.3s,
        box-shadow 0.3s;
    }

    &:focus-within {
      transform: translateY(0%);
      box-shadow: var(--border-shadow);
    }

    a {
      padding-inline: 0.25ch;
    }
  }
</style>
