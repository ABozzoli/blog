---
interface Props {
  n: number;
}

const { n } = Astro.props;
const currentPath = Astro.url.pathname;
---

<li class="footnote" id=`fn${n}` tabindex="-1">
  <slot />&nbsp;<a class="icon" href=`${currentPath}#fnref${n}`
    ><span aria-hidden="true">↩︎</span>
    <span class="visually-hidden">Back to reference {n}</span>
  </a>
</li>

<style lang="scss">
  .icon {
    display: inline;
    white-space: nowrap;
  }
</style>
