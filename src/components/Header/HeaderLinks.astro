---
import { isCurrentPage } from "../../js/utils";

export const routes = [
  { href: "", title: "Home" },
  { href: "articles", title: "Articles" },
];

const currentPath = Astro.url.pathname;
---

<ul role="list">
  {
    routes.map(({ href, title }) => (
      <li>
        <a class="nav-link" href={href} aria-current={isCurrentPage(currentPath, href)}>
          {title}
        </a>
      </li>
    ))
  }
</ul>

<style lang="scss">
  ul {
    display: flex;
    align-items: center;

    [aria-current="page"] {
      background-color: black;
      color: white;
    }
  }

  @media (max-width: 768px) {
    ul {
      flex-direction: column;
      /* align-items: stretch; */

      .nav-link {
        text-align: center;
      }
    }
  }
</style>
