---
import BackToTop from "./BackToTop.astro";
import IconLink from "./IconLink.astro";

const currentPath = Astro.url.pathname;
const isArticlePage = /^\/blog\/articles\/[^/]+/.test(currentPath);
---

{isArticlePage && <BackToTop />}

<footer id="footer" tabindex="-1">
  <div class="container">
    <p>&copy; {new Date().getFullYear().toString()} Alessandro Bozzoli â€” All rights reserved.</p>

    <ul role="list" aria-label="Social links">
      <li>
        <IconLink
          href="https://www.linkedin.com/in/abozzoli/"
          target="_blank"
          name="mdi:linkedin"
          size="2em"
          title="LinkedIn profile"
        />
      </li>
      <li>
        <IconLink
          href="https://github.com/ABozzoli"
          target="_blank"
          name="mdi:github"
          size="2em"
          title="GitHub profile"
        />
      </li>
    </ul>
  </div>
</footer>

<style lang="scss">
  footer {
    background-color: black;
    color: white;
    font-size: var(--fs-300);
    box-shadow: var(--border-shadow);

    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      column-gap: 1rem;
      padding: 24px;

      @media (max-width: 768px) {
        padding-inline: 16px;
      }
    }

    p {
      text-wrap: balance;
    }

    ul {
      display: flex;
      column-gap: 0.5rem;

      li {
        margin-top: -0.125rem;
        flex-shrink: 0;
      }
    }
  }
</style>
