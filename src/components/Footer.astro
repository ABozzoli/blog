---
import BackToTop from "./BackToTop.astro";
import Link from "./Link.astro";

const currentPath = Astro.url.pathname;
// Checks if the URL is a blog article page with a non-numeric slug; trailing "/" is optional
const isArticlePage = /^\/blog\/articles\/(?!\d+$)[^/]+\/?$/.test(currentPath);
---

{isArticlePage && <BackToTop />}

<footer id="footer" class="striped-background" tabindex="-1">
  <div class="container">
    <p class="preserve-background">
      &copy; {new Date().getFullYear().toString()} Alessandro Bozzoli â€” All rights reserved.
    </p>

    <ul class="preserve-background" role="list" aria-label="Social links">
      <li>
        <Link
          href="https://www.linkedin.com/in/abozzoli/"
          title="LinkedIn profile"
          iconBefore="mdi:linkedin"
          iconSize="2em"
        />
      </li>
      <li>
        <Link href="https://github.com/ABozzoli" title="GitHub profile" iconBefore="mdi:github" iconSize="2em" />
      </li>
    </ul>
  </div>
</footer>

<style lang="scss">
  footer {
    font-size: var(--fs-14px);
    outline: 1px solid var(--foreground);
    box-shadow: var(--border-shadow);
    z-index: 1; /* Ensure it's above the shadow of `<main>` */

    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      column-gap: 1rem;
      padding: 24px;

      @media (max-width: 768px) {
        padding-inline: 16px;
      }
    }

    p {
      text-wrap: balance;
      margin: 0;
    }

    ul {
      display: flex;
      column-gap: 0.5rem;
      flex-shrink: 0;

      li {
        margin-top: -0.125rem;
        flex-shrink: 0;
      }
    }

    @media print {
      display: none;
    }
  }
</style>
