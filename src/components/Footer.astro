---
import BackToTop from "./BackToTop.astro";
import Link from "./Link.astro";

const currentPath = Astro.url.pathname;
// Checks if the URL is a blog article page with a non-numeric slug; trailing "/" is optional
const isArticlePage = /^\/blog\/articles\/(?!\d+$)[^/]+\/?$/.test(currentPath);
---

{isArticlePage && <BackToTop />}

<footer id="footer" tabindex="-1">
  <div class="container">
    <p>&copy; {new Date().getFullYear().toString()} Alessandro Bozzoli â€” All rights reserved.</p>

    <ul role="list" aria-label="Social links">
      <li>
        <Link
          href="https://www.linkedin.com/in/abozzoli/"
          title="LinkedIn profile"
          iconBefore="mdi:linkedin"
          iconSize="2em"
        />
      </li>
      <li>
        <Link href="https://github.com/ABozzoli" title="GitHub profile" iconBefore="mdi:github" iconSize="2em" />
      </li>
    </ul>
  </div>
</footer>

<style lang="scss">
  footer {
    background-color: light-dark(var(--foreground), var(--background));
    color: light-dark(var(--background), var(--foreground));
    font-size: var(--fs-14px);
    border-top: 1px solid var(--foreground);
    box-shadow: var(--border-shadow);

    @media (prefers-color-scheme: dark) {
      background-image: var(--striped-background);

      .container > * {
        background-color: var(--background);
        box-shadow: 0 0 0 6px var(--background); /* Don't use outline, it breaks focus styles */
      }
    }

    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      column-gap: 1rem;
      padding: 24px;

      @media (max-width: 768px) {
        padding-inline: 16px;
      }
    }

    p {
      text-wrap: balance;
      margin: 0;
    }

    ul {
      display: flex;
      column-gap: 0.5rem;
      flex-shrink: 0;

      li {
        margin-top: -0.125rem;
        flex-shrink: 0;
      }
    }
  }
</style>
